<% layout('layout/boilerplate')%>
    <div class="container d-flex justify-content-center align-items-center mt-2 mb-4">
        <div class="row">
            <div class="col-md-6 col-xl-4">
                <div class="card shadow cardBorder cardSize">
                    <div class="cardImgContainer">
                        <img src="/images/newTaskImg.svg" class="cardImg">
                    </div>
                    <div class="card-body">
                        <form action="/tasks" method="post" novalidate class="validatedForm">
                            <div class="mb-3">
                                <label for="name" class="col-form-label req-asterik">Task</label>
                                <input type="text" class="form-control" name="task[name]" id="name"
                                    placeholder="Wash the Dishes" autofocus required>
                            </div>
                            <div class="row mb-3">
                                <div class="col">
                                    <label for="deadline" class="col-form-label">Deadline</label>
                                    <input type="datetime-local" class="form-control" name="task[deadline]"
                                        id="deadline" min="<%= today %>">
                                </div>
                                <div class="col">
                                    <label for="priority" class="col-form-label req-asterik">Priority</label>
                                    <select class="form-select" id="priority" name="task[priority]" required>
                                        <% for(let priority of priorities) { %>
                                            <option value="<%= priority %>">
                                                <%= priority[0].toUpperCase() + priority.substring(1) %>
                                            </option>
                                            <% } %>
                                    </select>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label for="desc" class="col-form-label req-asterik">Description</label>
                                <textarea name="task[description]" class="form-control" id="desc" maxlength="500"
                                    cols="30" rows="3" placeholder="Scrub all of the dishes ASAP" required></textarea>
                            </div>
                            <div class="d-grid">
                                <button class="btn submit-btn">CREATE TASK</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
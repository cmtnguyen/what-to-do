<% layout('layout/boilerplate')%>
    <div class="container d-flex justify-content-center align-items-center mt-4">
        <div class="row">
            <div class="col-md-6 col-xl-4">
                <div class="card shadow cardBorder cardSize">
                    <div class="cardImgContainer">
                        <img src="/images/logInImg.svg" class="cardImg">
                    </div>
                    <div class="card-body">
                        <form action="/login" class="validatedForm" method="post" novalidate>
                            <div class="mb-3">
                                <label class="form-label req-asterik" for="username">Username</label>
                                <input class="form-control" type="text" id="username" name="username"
                                    placeholder="Username" autofocus required>
                            </div>
                            <div class="mb-3">
                                <label class="form-label req-asterik" for="password">Password</label>
                                <input class="form-control" type="password" id="password" name="password"
                                    placeholder="Password" required>
                            </div>
                            <div class="d-grid">
                                <button class="btn submit-btn">LOGIN</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>